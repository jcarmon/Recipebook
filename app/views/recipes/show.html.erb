<p id="notice"><%= notice %></p>
<div class="container recipe-show">
  <h1>
    <%= @recipe.title %>
  </h1>

  <p>
    <strong>Author:</strong>
    <%= @recipe.author.first_name + ' ' + @recipe.author.last_name %>
  </p>

  <p>
    <strong>Difficulty:</strong>
    <%= @recipe.difficulty %>
  </p>

    <p>
    <strong>Comment:</strong>
    <%= @recipe.comment %>
  </p>

  <div class ingredients> 
   <h6>Ingredients</h6>
    <ul>
    <% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient.name %></li> 
    <% end %>
    </ul> 
  </div>


  <%= link_to 'Edit', edit_author_recipe_path(@author, @recipe) %> |
  <%= link_to 'Destroy', [@author, @recipe], method: :delete, data: { confirm: 'Are you sure?' } %>
  <%= link_to 'Add Ingredients', new_recipe_ingredient_path(@recipe) %>
<%= link_to 'Back', authors_path%>
</div>
<div id="new-boobs">
  <%= link_to 'Add Ingredients', new_recipe_ingredient_path(@recipe), remote: true %>
</div>