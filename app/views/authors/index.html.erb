<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Recipes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>  
        <td><%= author.first_name %></td>
        <td><%= author.last_name %></td>
        <td><%= author.email %></td>
        <td>
          <% author.recipes.each do |recipe| %>
         <%= recipe.title%>
          
        </td>  
       <% end %>



        <td><%= link_to 'See Recipes', author_recipes_path(author)%></td>
        <td><%= link_to 'Show', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

